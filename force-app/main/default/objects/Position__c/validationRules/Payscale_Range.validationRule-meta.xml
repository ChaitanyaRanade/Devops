<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payscale_Range</fullName>
    <active>true</active>
    <errorConditionFormula>( Max_Pay__c  -  Min_Pay__c ) &gt; 20000</errorConditionFormula>
    <errorDisplayField>Max_Pay__c</errorDisplayField>
    <errorMessage>Salary range must be within $20,000. Adjust the Salary Max or Salary Min values.</errorMessage>
</ValidationRule>
